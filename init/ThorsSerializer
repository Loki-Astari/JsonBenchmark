
CWD=$(pwd)
token=${GH_TOKEN}
if [[ "${token}" != "" ]]; then
    echo "--- Have Token ---"
    token="${token}@"
else
    echo "--- NO TOKEN ---"
fi



git clone https://${token}github.com/Loki-Astari/ThorsIOUtil.git
cd ThorsIOUtil
./configure --disable-vera --prefix $(realpath ${CWD}/build)
make
make install
cd ..

git clone https://${token}github.com/Loki-Astari/ThorsLogging.git
cd ThorsLogging
./configure --disable-vera --prefix $(realpath ${CWD}/build) --with-thorserialize-root=$(realpath ${CWD}/build)
make
make install
cd ..


./configure --disable-vera
make

