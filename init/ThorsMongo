
if [[ "${1}" == "Darwin" ]]; then
    brew update
    brew install thors-mongo
fi

if [[ "$1" == "Linux" ]]; then

    ./configure --enable-dark-mode --with-magicenum-header-only-root=/tmp/magic_enum/include/magic_enum --disable-test-with-mongo-query --disable-Mongo-Service --disable-vera
    rm -rf $(find third/*/src -name test)
    make
    sudo make install

fi

