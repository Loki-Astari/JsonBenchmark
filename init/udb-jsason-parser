
#
# udb-jsason-parser
#
DST=$(pwd)
./configure --prefix=${DST}
make
make install

cd ../udb-json-builder

#
# udb-json-builder
#
if [[ "$1" == "osx" || "$1" == "Darwin" ]]; then
    archisArm="-DCMAKE_APPLE_SILICON_PROCESSOR=arm64"
fi

if [[ "$1" == "Msys" ]]; then
    archisArm="-G MSYS Makefiles"
    installLoc="--install-prefix ${DST}"
fi


cmake -DCMAKE_C_FLAGS='-std=c99 -fPIC -I../udb-jsason-parser' "${archisArm}" ${installLoc} .
make
make install



