#
# json-voorhees
#
if [[ "$1" == "osx" || "$1" == "Darwin" ]]; then
    archisArm="-DCMAKE_APPLE_SILICON_PROCESSOR=arm64"
fi

if [[ "$1" == "Msys" ]]; then
    archisArm="-G MSYS Makefiles"
fi



cmake -DLIBRARY_INSTALL_DIR=/usr/local/lib -DLIBRARY_TYPE=STATIC -DCMAKE_CXX_FLAGS=-fPIC "${archisArm}" .
make

